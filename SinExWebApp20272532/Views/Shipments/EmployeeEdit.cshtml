@model SinExWebApp20272532.Models.Shipment
@{
    ViewBag.Title = "EmployeeEdit";
}

<h2>EmployeeEdit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Shipment</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.WaybillId)

        @{
            var i = 0;
        }
        @foreach (var Package in (ICollection<SinExWebApp20272532.Models.Package>)ViewBag.PackageList)
        {
            <div class="form-group">
                @Html.DisplayFor(modelItem => Package)
                <div class="col-md-10">
                    @Html.Label("Weight", new { htmlAttributes = new { @class = "form-label" } })
                    @Html.TextBox("Package" + i.ToString(), "", new { htmlAttributes = new { @class = "form-control" } })
                    @Html.Hidden("Package" + i.ToString() + "id",Package.PackageId)
                    @Html.ValidationMessageFor(modelItem => Package.Weight, "", new { @class = "text-danger" })
                </div>
            </div>
            i++;
        }

        <div class="form-group">
            @Html.LabelFor(model => model.TotalTaxes, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("TotalTaxes", "", new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TotalTaxes, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TotalDuties, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("TotalDuties", "", new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TotalDuties, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
            }

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
