@model IEnumerable<SinExWebApp20272532.Models.PackageType>

@{
    ViewBag.Title = "Package Types";
}

<h2>Package Types</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
        </tr>
        foreach (var PackageTypeSize in item.PackageTypeSizes)
        {
            <tr>
                <td></td>
                <td>
                    (Size: 
                    @Html.DisplayFor(modelItem => PackageTypeSize.Size). Weight limit: @Html.DisplayFor(modelItem => PackageTypeSize.WeightLimit))
                </td>
            </tr>
        }
    }

</table>
